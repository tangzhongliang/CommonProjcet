<?xml version="1.0" encoding="utf-8"?>
<!-- 青枠ダイアログ用レイアウト -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="480px"
    android:layout_height="200px"
    android:background="#000">

    <ImageView
        android:id="@+id/imageView_background_mydialog"
        android:layout_width="480px"
        android:layout_height="200px"
        android:layout_centerInParent="true"
        android:src="@drawable/com_popup_bg" />

    <ImageView
        android:id="@+id/imageView_alert_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageView_background_mydialog"
        android:layout_alignTop="@id/imageView_background_mydialog"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:src="@drawable/com_icon_warning" />

    <TextView
        android:id="@+id/textView_mydialog_error_line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView_background_mydialog"
        android:layout_alignRight="@+id/imageView_background_mydialog"
        android:layout_marginLeft="18px"
        android:layout_marginTop="20px"
        android:layout_marginRight="20px"
        android:layout_toRightOf="@id/imageView_alert_icon"
        android:textColor="@color/white"
        android:textSize="24px" />

    <Button
        android:id="@+id/button_alert_dialog_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView_background_mydialog"
        android:layout_alignRight="@id/imageView_background_mydialog"
        android:layout_marginBottom="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/selector_alert_dialog_ok"
        android:text="OK"
        android:textColor="#fff" />
</RelativeLayout>